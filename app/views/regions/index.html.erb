<h1>Regions</h1>
<table class="table">
  <thead>
    <tr>
      <th>Region Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody id="region-table">
      <% @regions.each do |region| %>
        <%= render 'region' , region: region %>
      <% end %>
  </tbody>
</table>
<br>

<!-- Button trigger modal -->
<button type="button", class="btn btn-primary", data-bs-toggle="modal", data-bs-target="#newModal">
  Add New Region
</button>
<!-- Add Region Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add new Region</h5>
        <button type="button" id= "closeNewForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="errors"></div>
        <%= render 'newform'%>
      </div>
    </div>
  </div>
</div> 



<div id="form-container"></div>

