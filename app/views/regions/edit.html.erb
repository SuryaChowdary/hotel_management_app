<h1>New Region</h1>
  <% if @region.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@region.errors.count, "error") %> prohibited this region from being saved:</h2>

      <ul>
        <% @region.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @region, local: true) do |f| %>
  <div class="field">
    <%= f.label :Region_name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :client_id %>
    <%= f.collection_select :client_id, Client.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

