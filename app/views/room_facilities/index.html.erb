<h1>Listing Room Facilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_facilities.each do |room_facility| %>
      <tr>
        <td><%= room_facility.name %></td>
        <td><%= room_facility.room_facility_category.name %></td>
        <td><%= link_to 'Show', room_facility, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_room_facility_path(room_facility), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', room_facility,class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Facility', new_room_facility_path, class: 'btn btn-primary'%>
<br/>
<br/>
<%= link_to 'View Categories', room_facility_categories_path, class: 'btn btn-secondary' %>
