<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location.each do |location| %>
      <tr>
        <td><%= location.country %></td>
        <td><%= location.region.name %></td>
        <td><%= link_to 'Show', location_path(location) %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
