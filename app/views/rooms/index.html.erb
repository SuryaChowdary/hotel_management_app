<h1>List of Rooms</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Price</th>
      <th>Hotel Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.capacity %></td>
        <td><%= room.price %></td>
        <td><%= room.hotel_branch.name %></td>
        <td><%= link_to 'Show', room_path(room) %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room_path(room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
