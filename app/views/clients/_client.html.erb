  <tr id = "client-<%= client.id %>">
    <td><%= client.name %></td>
    <td><%= link_to 'Show', client_path(client), class: 'btn btn-info', data: {remote: true, bs_toggle: "modal", bs_target: "#showclient-#{client.id}"} %></td>
    <td><%= link_to 'Add Criteria', client_path(client), class: 'btn btn-secondary' %></td>
    <td><%= link_to 'Edit', edit_client_path(client),data: { remote: true , bs_toggle: "modal", bs_target: "#editclient-#{client.id}"}, class: 'btn btn-primary'%></td>
    <td><%= link_to 'Destroy', client_path(client), method: :delete, data: { confirm: 'Are you sure, All the associates will get deleted?' } , class: 'btn btn-danger'%></td>
  </tr>

  <!-- Edit Client Modal -->
  <div class="modal fade" id="editclient-<%= client.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Client Details</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors"></div>
          <div class="container">
            <div class="row justify-content-center mt-4 ">
              <div class="col-md-8">
                <div class="card">
                  <div class="card-header">
                    <h1>Edit Client</h1>
                  </div>
                  <div class="card-body">
                    <%= form_with(model: client, data: { remote: true}, method: :patch, id: 'edit-form') do |f| %>
                      <div class="form-group ">
                        <%= f.label :Name %>
                        <%= f.text_field :name, class: 'form-control mt-2' %>
                      </div>
                      <div class="form-group">
                        <%= f.label :Region %>
                        <%= f.collection_select :region_ids, Region.all, :id, :name, {prompt: "Select regions"}, {include_hidden: false, multiple: true, class: "form-control", id: "region-#{client.id}"} %>
                      </div>
                      <div class="form-group">
                        <%= f.label :Location %>
                        <%= f.collection_select(:location_ids, Location.where(region_id: client.regions.pluck(:id)), :id, :name, {include_blank: "Select Locations"}, {multiple: true, class: "form-control", id: "location-#{client.id}"}) %>
                      </div>
                      <div class="card-footer text-muted">
                        <%= f.submit 'Update Client', class: 'btn btn-primary mt-2' %>
                        <%= link_to 'Back', clients_path , class: 'btn btn-secondary mt-2' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>    
      </div>
    </div>
  </div>
  <script>
    $(document).on('change', '#region-<%= client.id %>', function getLocations() {
      var selectedRegions = $(this).val();
      $.ajax({
        url: "/locations_by_region",
        method: "GET",
        data: { regions: selectedRegions },
        success: function(data) {
          $("#location-<%= client.id %>").html(data);
        }
      });
    });
  </script>
</div> 

<!-- Client show modal -->
<div class="modal fade" id="showclient-<%=client.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Client Details</h5>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container mt-5">
          <div class="card">
            <div class="card-header">
              <h1 class="card-title">Name: <%= client.name %></h1>
            </div>
            <div class="card-body">
                <p class="card-subtitle "> <strong>Hotels:</strong></p>
                <% client.hotel_branches.each do |hotel| %>
                  <ul>
                    <%= hotel.name %>
                  </ul>
                <% end %>
                <% client.regions.each do |region|%>
                  <p class="card-subtitle "><strong> Regions: </strong></p> 
                    <ul>
                      <%= region.name%></p>
                    </ul>
                <% end %>
                <% client.locations.each do |location|%>
                    <p class="card-subtitle "> <strong>Locations:</strong></p>
                    <ul>
                      <%=location.name%>
                    </ul>
                <% end %>
            </div>
            <div class="card-footer text-muted">
              <%= link_to 'Back', clients_path, class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
