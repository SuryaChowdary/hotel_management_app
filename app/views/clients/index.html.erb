<h1>Listing clients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @client.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= link_to 'Show', client_path(client), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', client_path(client), method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path , class: 'btn btn-primary' %>
