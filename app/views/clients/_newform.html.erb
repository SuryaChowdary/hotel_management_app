<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add a New Client</div>
        <div class="card-body">
          <% if @client.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@client.errors.count, "error") %> prohibited this location from being saved:</h2>
              <ul>
                <% @client.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_with scope: :client , url: clients_path, data: {remote: true} do |f| %>
            <div class="form-group">
              <%= f.label :Name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit 'Add Client', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

