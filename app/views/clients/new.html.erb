
<%= form_with scope: :client, url: clients_path, local: true do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

 <p>
    <%= f.label :User%> <br/>
    <%= f.select :user_id, User.all.collect {|x| [x.username, x.id]}, {} %>
  </p>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
