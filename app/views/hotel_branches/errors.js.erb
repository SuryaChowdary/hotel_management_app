<% if @hotel.errors.any? %>
  <%if params[:action] == "create" %>
    $("#newerrors").html("<%= j(render 'hotel_branches/errors', hotel: @hotel) %>");
  <% elsif params[:action] == "update" %>
    $("#editerrors_<%= @hotel.id %>").html("<%= j(render 'hotel_branches/errors', hotel: @hotel) %>");
  <% end %>
<% end %> 
