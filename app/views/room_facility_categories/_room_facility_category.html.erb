<tr id="room_facility_category-<%=room_facility_category.id%>">
  <td><%= room_facility_category.name%></td>
  <!-- Button trigger for show page -->
  <td><%= link_to 'Show', room_facility_category, class: 'btn btn-primary', data: {remote: true, bs_toggle: "modal", bs_target: "#showroom_facility_category-#{room_facility_category.id}"}%></td>
  <!-- Button trigger for edit form -->
  <td><%= link_to 'Edit', edit_room_facility_category_path(room_facility_category), data: {remote: true, bs_toggle: "modal", bs_target: "#editroom_facility_category-#{room_facility_category.id}"},class: 'btn btn-secondary' %></td>
  <td><%= button_to 'Destroy', room_facility_category,class: 'btn btn-danger',remote: true,method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>

<!-- Edit Room Facility Category Modal -->
<div class="modal fade" id="editroom_facility_category-<%= room_facility_category.id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Category</h5>
        <button type="button" class="closeEditForm" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="editerrors-<%= room_facility_category.id %>"></div>
        <div class="container">
          <div class="row justify-content-center mt-4 ">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header">Edit Facility Category</div>
                <div class="card-body">
                  <%= form_with(model: room_facility_category, data: { remote: true}, method: :patch, id: 'edit-form') do |f| %>
                    <div class="form-group">
                      <%= f.label :Name%>
                      <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="card-footer text-muted">
                      <%= f.submit 'Update Category', class: 'btn btn-primary ' %>
                      <%= link_to 'Back', room_facility_categories_path, class: 'btn btn-secondary' %>
                    </div> 
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Room Facility Category Show page modal -->
<div class="modal fade" id="showroom_facility_category-<%= room_facility_category.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Room Facility Category Details</h4>
        <button type="button" id= "closeShowForm" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="container mt-5">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title">Categories for Room Facilities</h1>
          </div>
          <div class="card-body">
            <h2 class="card-subtitle mb-2 text-muted"> Name: <%= room_facility_category.name %></h2>
          <div class="card-footer text-muted">
            <%= link_to 'Back', room_facility_categories_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>