<% if @room_facility_category.errors.any? %>
  <% if params[:action] == "create" %>
    $("#newerrors").html("<%= j(render 'room_facility_categories/errors', room_facility_category: @room_facility_category) %>");
  <% elsif params[:action] == "update" %>
    $("#editerrors-<%= @room_facility_category.id%>").html("<%= j(render 'room_facility_categories/errors', room_facility_category: @room_facility_category) %>");
  <% end %>
<% end %> 
