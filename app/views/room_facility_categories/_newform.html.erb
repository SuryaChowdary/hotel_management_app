<div class="container">
  <div class="row justify-content-center mt-4 ">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Add New Facility Category</div>
        <div class="card-body">
          <% if @room_facility_category.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@room_facility_category.errors.count, "error") %> prohibited this location from being saved:</h2>
              <ul>
                <% @room_facility_category.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_with scope: :room_facility_category, url: room_facility_categories_path, data: {remote: true} do |f| %>
            <div class="form-group">
              <%= f.label :Name%>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit 'Add Category', class: 'btn btn-primary mt-2' %>
            </div>
          <% end %>
          <div class="card-footer text-muted">
            <%= link_to 'Back', room_facility_categories_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>